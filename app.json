{
  "expo": {
    "name": "HoroscopeApp",
    "slug": "HoroscopeApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "horoscopeapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "appleTeamId": "P5Z8ADNW3Q",
      "supportsTablet": true,
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.knt.HoroscopeApp",
          "group.com.knt.HoroscopeApp"
        ]
      },
      "bundleIdentifier": "com.anonymous.HoroscopeApp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/icon.png",
        "backgroundImage": "./assets/images/bg.png",
        "monochromeImage": "./assets/images/splash-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.HoroscopeApp"
    },
    "web": {
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-background-task",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "@bacons/apple-targets",
      [
        "expo-build-properties",
        {
          "android": {
            "ndkVersion": "27.0.12077973"
          }
        }
      ],
      [
        "react-native-android-widget",
        {
          "fonts": [
            "./assets/fonts/Roboto-Regular.ttf",
            "./assets/fonts/OpenSans-Regular.ttf",
            "./assets/fonts/FuzzyBubbles-Regular.ttf",
            "./assets/fonts/Creepster-Regular.ttf",
            "./assets/fonts/Delius-Regular.ttf",
            "./assets/fonts/IndieFlower-Regular.ttf",
            "./assets/fonts/LobsterTwo-Regular.ttf",
            "./assets/fonts/Monoton-Regular.ttf",
            "./assets/fonts/Montserrat-Regular.ttf",
            "./assets/fonts/PlayfairDisplay-Regular.ttf",
            "./assets/fonts/Sansation-Regular.ttf",
            "./assets/fonts/SpecialElite-Regular.ttf",
            "./assets/fonts/VT323-Regular.ttf"
          ],
          "widgets": [
            {
              "name": "HoroscopeSmall",
              "label": "Small Horoscope Widget",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "description": "",
              "previewImage": "./assets/widget-preview/preview.png",
              "updatePeriodMillis": 0
            },
            {
              "name": "HoroscopeMedium",
              "label": "Medium Horoscope Widget",
              "targetCellWidth": 4,
              "targetCellHeight": 2,
              "minWidth": "250dp",
              "minHeight": "110dp",
              "description": "",
              "previewImage": "./assets/widget-preview/preview.png",
              "updatePeriodMillis": 0
            },
            {
              "name": "HoroscopeLarge",
              "label": "Large horoscope widget",
              "targetCellWidth": 4,
              "targetCellHeight": 4,
              "minWidth": "250dp",
              "minHeight": "250dp",
              "description": "",
              "previewImage": "./assets/widget-preview/preview.png",
              "updatePeriodMillis": 0
            }
          ]
        }
      ],
      "expo-background-task"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "bundleIdentifier": "com.anonymous.HoroscopeApp.widget",
                  "targetName": "widget",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.knt.HoroscopeApp"
                    ]
                  }
                }
              ]
            }
          }
        },
        "projectId": "c5b27bd4-bfa0-4b5f-a79e-89ab6f412cdf"
      }
    },
    "owner": "khangt"
  }
}
